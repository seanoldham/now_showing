<section>
  <h3>Results for: "<%= @search_term %>"</h3>
</section>
<section>
  <ul>
    <% for result in @results do %>
        <% if result.poster_path %>
            <% if @type == "movie" %>
                <% @title = result.title %>
            <% else %>
                <% @title = result.name %>
            <% end %>
            <li>
              <div class="img-result">
                <%= image_tag "http://image.tmdb.org/t/p/original#{result.poster_path}" %><br>
                <div class="hover">
                  <div class="hover-links">
                    <%= button_to "Currently Watching", trello_add_path, params: { button_name: "watching", result_title: @title, result_id: result.id, poster_path: result.poster_path }, data: { confirm: "Add this to the Currently Watching list on Trello?" } %>
                    <%= button_to "Watch Later", trello_add_path, params: { button_name: "to_watch", result_title: @title, result_id: result.id, poster_path: result.poster_path }, data: { confirm: "Add this to the Watch Later list on Trello?" } %>
                    <%= button_to "Already Watched", trello_add_path, params: { button_name: "watched", result_title: @title, result_id: result.id, poster_path: result.poster_path }, data: { confirm: "Add this to the Already Watched list on Trello?" } %>
                  </div>
                </div>
              </div>
              <p><%= @title %></p>
            </li>
        <% end %>
    <% end %>
  </ul>
</section>
<br>
<section>
  <%= form_tag('/search') do %>
      <section class="search-input">
        <%= search_field_tag 'search', nil %>
      </section>
      <section>
        <div class="media-types">
          <label>
            <%= radio_button_tag 'media_type', 'movie', checked: true %>
            <span class="media-type-item">Movie</span>
          </label>
          <label>
            <%= radio_button_tag 'media_type', 'tv' %>
            <span class="media-type-item">TV</span>
          </label>
        </div>
      </section>
      <section>
        <%= submit_tag "Search" %>
      </section>
  <% end %>
</section>

<script>
  $(document).ready(function(){
    $(".img-result").mouseover(function() {
      $(this).children(".hover").show();
    });
    $(".img-result").mouseout(function() {
      $(this).children(".hover").hide();
    });
  });
</script>

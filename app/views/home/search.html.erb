<div class="col-xs-12 col-md-12">
  <% for result in @results do %>
    <div class="col-xs-12 col-md-3">
      <div class="result">
        <% if result.poster_path %>
          <%= image_tag("http://image.tmdb.org/t/p/original#{result.poster_path}", class: 'img-responsive result-img') %>
          <% if @type == "movie" %>
            <h4 class="text-center"><%= result.title %></h4>
          <% else %>
            <h4 class="text-center"><%= result.name %></h4>
          <% end %>
        <% end %>
        <br>
      </div>
    </div>
  <% end %>
</div>

<div class="col-md-6 col-md-offset-3">
  <br><br>
  <%= bootstrap_form_tag(url: '/search') do |f| %>
    <%= f.search_field :search, hide_label: true, id: "search-field" %>
    <div class="col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4">
      <%= f.select :media_type, [["Movie", "movie"], ["TV", "tv"]], { label: "Movie or TV?" }, { class: "selectpicker" } %>
      <%= f.submit "Search" %>
    </div>
  <% end %>
</div>

<div class="col-md-6 col-md-offset-3">
  <br><br>
  <%= form_tag('/search') do %>
    <%= search_field(:search, "") %>
    <div class="col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4">
      <%= radio_button_tag(:media_type, "movie") %>
      <%= label_tag(:media_type_move, "Movie") %>
      <%= radio_button_tag(:age, "tv") %>
      <%= label_tag(:age_adult, "TV Show") %>
      <%= submit_tag "Search" %>
    </div>
  <% end %>
</div>